<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/index.css">
<div id="cluster-map"></div>
<div class="container-fluid my-5">
    <div class="d-flex justify-content-between">
        <h1> All restors </h1>
        <div class="restaurant-btn d-flex align-items-center">
            <button type="button" class="btn btn-dark py-0"><a href="/restaurants/new">Add Restaurants</a></button>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
           
                <% for (let restaurant of restaurants){%>
                    <div class="col-md-3">
                <div class="card mt-3 text-center mx-4">
                    <%if(restaurant.images.length) {%>
                    <img class="img-fluid" alt="" src="<%=restaurant.images[0].url%>">
                    <% }else {%>
                    <img class="img-fluid" alt="" style="filter:grayscale(100%);" src="dog.jpg">
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title"><%= restaurant.title %> </h5>
                        <p class="card-text"><%= restaurant.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= restaurant.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/restaurants/<%=restaurant._id%>">View
                            <%=restaurant.title%></a>
                    </div>
                </div>
            </div>
                <% }%>
            
        </div>
    </div>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const restaurants = { features: <%- JSON.stringify(restaurants) %>}
</script>

<script src="/scripts/clusterMap.js"></script>